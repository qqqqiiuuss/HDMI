<mujoco model="box">
    <compiler angle="radian" coordinate="local" />
    
    <default>
        <geom contype="1" conaffinity="1" friction="0.8 0.8 0.8" />
    </default>

    <asset>
        <material name="white" rgba="1 1 1 1" />
        <material name="red" rgba="1 0 0 1" />
    </asset>

    <worldbody>
        <body name="box" pos="0.3 0 0" quat="0 0 0 1">
            <freejoint name="box_root"/>
            <geom type="box" size="0.3 0.4 0.4" pos="-0.3 0 0.4" material="white" mass="8" friction="0.5"/>

            <!-- <geom type="sphere" size="0.02" pos="0.0 -0.15 0.75" material="red" mass="0"/>
            <site name="box_contact_1" pos="0.0 -0.15 0.75" size="0.02" group="1"/> -->
        </body>
    </worldbody>

    <sensor>
        <framepos name="box_pos" objtype="xbody" objname="box" />
        <framequat name="box_quat" objtype="xbody" objname="box" />
    </sensor>
</mujoco>